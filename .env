# 중앙 API 서버 URL (로그 전송 대상)
CENTRAL_API_SERVER_URL=http://127.0.0.1:3000

# Suricata 설정 파일 경로
SURICATA_CONFIG_PATH=/etc/suricata/suricata.yaml

# Suricata NIC 설정 (기본: eth0)
SURICATA_INTERFACE=eth0

# Suricata 감시할 네트워크 인터페이스
SURICATA_INTERFACE=eth0

# 로그 파일 감시 주기 (초 단위, 기본: 2초)
LOG_WATCH_INTERVAL=2

# 오래된 로그 정리 주기 (초 단위, 기본: 60초)
CLEANUP_INTERVAL=60

# Suricata 로그가 저장될 디렉토리
LOG_DIR=/var/log/suricata

# 활성 로그 파일 경로 (보통 eve.json)
ACTIVE_LOG_FILE=/var/log/suricata/eve.json

# 로그 파일 최대 크기 (MB 단위, 초과 시 로테이션)
MAX_LOG_SIZE_MB=100

# 수리카타 스킵
SKIP_SURICATA=false

# 서버 포트 설정
PORT=3000

# 단일 컨테이너에서 Suricata 서비스 활성화 여부
ENABLE_SURICATA=true

# 단일 컨테이너에서 로그 모니터링 기능 활성화 여부 (Fluentd 대체)
ENABLE_LOG_MONITOR=true